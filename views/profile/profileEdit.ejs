<%-include('../partials/header')%>
    <%-include('../partials/navbar')%>
    <%-include('../partials/flash')%>
    
        <div class="constainer mt-4 text-center mx-auto">
            <h1>Profile Edit</h1>
            <form action="/profile/<%=currentUser._id%>/edit?_method=PATCH" method="POST">
            <div class="border mt-3 p-3" style="width:23rem ">
                <div class="border" style="width: 12rem; margin: auto; border-radius: 100%; height: 190px; overflow: hidden;">
                    <img src="/assets/user.png" class="card-img-top" alt="..." width="10%" style="background-size: cover;">
                </div>

                <div class="card-body mt-3 text-center">
                    <table class="table">
                        <tbody>
                          <tr>
                            <td><b>Name</b> </td>
                            <td><b><%=currentUser.name%></b></td>
                          </tr>
                          <tr>
                            <td><b>Gmail</b></td>
                            <td><input type="text" value="<%=currentUser.email%>" name="email"></td>
                          </tr>
                          <tr>
                            <td><b>Contact</b></td>
                            <td><input type="text" value="<%=currentUser.phone%>" name="phone"></td>
                          </tr>
                          <tr>
                            <td><b>Username</b></td>
                            <td><b><%=currentUser.username%></b></td>
                          </tr>
                         
                        </tbody>
                      </table>
                      <button type="submit" class="btn btn-primary">Update Profile</button>
                </div>
              </div>
            </form>
        </div>
        <%-include('../partials/footer')%>

