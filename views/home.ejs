<%-include('./partials/header')%>
  <%-include('./partials/navbar')%>
  <%-include('./partials/flash')%>




  <div class="container mt-5">
      <ul class="list-group mt-2" id="todoList" >
            <% for(let item of items) { %>
                <% if(item.priority==="low"){ %>
                    <li class="list-group-item d-flex justify-content-between align-items-center m-2 " style="color: #008000;">
                        <div> 
                            <span class="dot"></span> <!-- Dot -->
                            <%= item.listitem %>
                        </div>
                        
                    </li>
                <% } else if(item.priority==="medium" ){ %>
                    <li class=" list-group-item d-flex justify-content-between align-items-center m-2 " style="color: orange;">
                        <div> 
                            <span class="dot"></span> <!-- Dot -->
                            <%= item.listitem %>
                        </div>
        
                    </li>
                <% } else if(item.priority==="high" ){ %>
                    <li class="list-group-item d-flex justify-content-between align-items-center m-2 " style="color: #FF0000; ">
                        <div> 
                            <span class="dot"></span> <!-- Dot -->
                            <%= item.listitem %>
                        </div>
                        
                    </li>
                <% } %>
            </ul>
            <% } %>
</div>





